{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <h1>Reset your password</h1>
    <div class="form-title">
    {{ form_start(resetForm) }}
        <div class="form">
            {{ form_label(resetForm.plainPassword.first) }}
            {{ form_widget(resetForm.plainPassword.first, { 'attr': {'class': 'form-all title-block'} }) }}
        </div>
        <div class="form">
            {{ form_label(resetForm.plainPassword.second) }}
            {{ form_widget(resetForm.plainPassword.second, { 'attr': {'class': 'form-all title-block'} }) }}
        </div>
        <div class="valider">
            <button class="button-valider">Reset password</button>
        </div>
    {{ form_end(resetForm) }}
    </div>
{% endblock %}
