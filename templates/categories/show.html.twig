{% extends 'base.html.twig' %}

{% block title %}{{ categories.name }}{% endblock %}
{% block meta_description %}Toutes les novels qui sont associés à {{ categories.name }}.{% endblock %}

{% block body %}
    <div class="all-categories">
        {% for categorie in all_categories %}
                <a href="{{ path('categories_show', {'name': categorie.name}) }}">
                    <p class="catetag">{{ categorie.name }}</p>
                </a>
        {% endfor %}
    </div>
    <h1>Categorie : {{ categories.name }}</h1>
    {% if categories.novels is not empty %}
        <div class="">
            {{ knp_pagination_render(novels) }}
        </div>
        <div class="all-novels">
            {% for novel in novels %}
                <div class="novel-pages">
                    <div class="images-novels-pages">
                        <a href="{{ path('show', {title: novel.title}) }}">
                            <img src="{{ vich_uploader_asset(novel, 'imageFile') }}" alt="{{ novel.imageName }}">
                        </a>
                    </div>
                    <h4>{{novel.title}}</h4>
                </div>
            {% endfor %}
        </div>
        <div class="">
            {{ knp_pagination_render(novels) }}
        </div>
    {% endif %}
{% endblock %}
